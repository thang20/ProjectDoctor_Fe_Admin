<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F5"
    tools:context=".profile_interface.ProfileDataScheduleAdd">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imv_home_home1_checkAllAtHome_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_23">

                    </ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:text="Confirmation and payment"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">



                </LinearLayout>

            </LinearLayout>




        </Toolbar>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/homeonext"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>
                <TextView
                    android:layout_marginStart="15dp"
                    android:text="Patient Information"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Name"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_home_home1_checkAllAtHome_name"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Gender"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_gender"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Age"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_age"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Phone"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_phone"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left|top"

                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Address"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right|top"

                        android:layout_weight="1.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_address"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/homeonext2">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Examination schedule"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/carepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Day of the examination"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_date"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left|top"

                        android:layout_weight="1.4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Estimated examination time"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right|top"

                        android:layout_weight="0.6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_time"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="1.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Type of examination"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="0.9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt__home_home1_checkAllAtHome_service"
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Service"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center|left"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="10dp"
                            android:text="Payment type"

                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="15dp"
                        android:gravity="center|right"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:paddingEnd="10dp"
                            android:padding="10dp"
                            android:text="Just make appointment"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <Button
                android:id="@+id/btn_home_home1_checkAllAtHome_next0"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#2BC4BF"
                android:text="See doctor free time"
                android:textAllCaps="false" />
            <LinearLayout
                android:id="@+id/ln_home1"
                android:background="@drawable/carepay"
                android:weightSum="5"
                android:layout_marginHorizontal="10dp"

                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_gravity="center"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/img_home_home1_checkAllAtHome_imgdoctor"
                        android:layout_width="70dp"
                        android:layout_height="80dp"

                        app:civ_border_width="2dp"
                        app:civ_border_color="#FAF9F9"/>



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:layout_weight="3.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt__home_home1_checkAllAtHome_namedt"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_marginStart="20dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_book_athospital_dt_next"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="40dp">

                    </ImageView>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_home_home1_checkAllAtHome_next1"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#2BC4BF"
                android:text="Finish medical examination"
                android:textAllCaps="false" />




        </LinearLayout>



    </ScrollView>



</LinearLayout>